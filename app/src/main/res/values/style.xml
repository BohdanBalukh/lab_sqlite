<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">9pt</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>/>

    </style>

    <style name="cardTitleStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="cardArrowImageStyle">
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_width">18dp</item>
        <item name="android:src">@drawable/arrow</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:maxLength">3</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>
    <style name="DeleteButton">
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_width">18dp</item>
        <item name="android:src">@drawable/ic_baseline_delete_forever_24</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:maxLength">3</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>
</resources>